{
    "version": 2,
    "builds": [
      {
        "src": "portfolio_backend/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.10.5" }
      },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "ui/staticfiles"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "portfolio_backend/wsgi.py"
      }
    ],
    "outputDirectory": "ui/staticfiles"
  }